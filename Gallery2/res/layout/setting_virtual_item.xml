    <TextView android:id="@id/title" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/SettingItemSubTitle" />
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <RadioGroup android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <LinearLayout style="@style/SettingVirtualItem">
                <TextView android:id="@id/title1" style="@style/SettingVirtualTitle" />
                <RadioButton android:id="@id/radio1" style="@style/SettingVirtualRadio" />
            </LinearLayout>
            <LinearLayout style="@style/SettingVirtualItem">
                <TextView android:id="@id/title2" style="@style/SettingVirtualTitle" />
                <RadioButton android:id="@id/radio2" style="@style/SettingVirtualRadio" />
            </LinearLayout>
            <LinearLayout style="@style/SettingVirtualItem">
                <TextView android:id="@id/title3" style="@style/SettingVirtualTitle" />
                <RadioButton android:id="@id/radio3" style="@style/SettingVirtualRadio" />
            </LinearLayout>
        </RadioGroup>
    </LinearLayout>
</LinearLayout>